@model FastFood.Web.ViewModels.CartOrderViewModel
<section class="h-100"style="background-color:#eee;">
	<div class="container h-100 py-5">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col-10">
				<div class="d-flex justify-content-between align-items-center mb-4">
					<h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
				</div>
				@if(Model.ListofCart.Count>0)
				{
					@foreach(var cart in Model.ListofCart)
					{
						<div class="card rounded-3 mb-4">
							<div class="row d-flex justify-content-between align-items-center">
								<div col-md-2 col-lg-2 col-xl-2>
									<img src="@cart.Item.Image" class="img-fluid rounded-3" alt="Cotton T-shirt"/>
								</div>
								<div class="col-md-3 col-lg-3 col-xl-3">
									<p class="lead fw-normal mb-2">@cart.Item.Title</p>
									<p><span class="text-muted">@Html.Raw(cart.Item.Description)</span></p>
							    </div>
								<div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
									<h5 class="mb-0">@cart.Item.Price</h5>x<h5 class="mb-5">@cart.Count</h5>
								</div>
								<div class="col-md-3 col-lg-3 col-xl-2 d-flex">
									<a asp-action="plus" asp-route-id="@cart.Id" class="btn btn-link px-2">
										<i class="fas fa-plus-circle fa-lg"></i>
									</a>
									<a asp-action="minus" asp-route-id="@cart.Id" class="btn btn-link px-2">
										<i class="fas fa-plus-circle fa-lg"></i>
									</a>
									<a asp-action="delete" asp-route-id="@cart.Id" class="btn btn-link px-2">
										<i class="fas fa-plus-circle fa-lg"></i>
									</a>
							    </div>
						    </div>
						</div>
					}
				}
			</div>

		</div>
	</div>

</section>