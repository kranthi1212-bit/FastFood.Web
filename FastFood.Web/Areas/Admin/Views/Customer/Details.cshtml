@model FastFood.Modals.Cart
@{
	ViewData["Title"] = "Details";
}

<h1>Details</h1>

<form asp-action="Details" method="post">
	<div class="row">
		<div class="col-2">
			<img src="@Model.Item.Image" width="100" height="100" alt="No Image" />
			<input type="hidden" asp-for="ItemId" />
		</div>
		<div class="col-2">
			@Html.DisplayFor(model => model.Item.Title)
		</div>
		<div class="col-2">
			@Html.DisplayFor(model => model.Item.Description)
		</div>
		<div class="col-2">
			$@Html.DisplayFor(model => model.Item.Price)
		</div>
		<div class="col-2">
			<div class="col-3">
				<input type="number" asp-for="@Model.Count" min="1" value="1" style="width:50px" />
			</div>
			<div class="col-3">
				<input type="submit" value="Add Cart" class="btn btn-primary" />
			</div>

		</div>
	</div>
</form>
<div>
	<a asp-action="Index">Back to List</a>
</div>

