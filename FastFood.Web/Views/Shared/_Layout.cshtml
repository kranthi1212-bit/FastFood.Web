<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - FastFood.Web</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/FastFood.Web.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="background-color:gray;border-radius:15px 50px;width:230px">&nbsp;&nbsp;FastFood online delivery</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="Admin" asp-controller="Categories" asp-action="Index" style="background-color:gray;border-radius:15px 50px;">Category</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="Admin" asp-controller="SubCategories" asp-action="Index" style="background-color:gray;border-radius:15px 50px;">SubCategory</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="Admin" asp-controller="Items" asp-action="Index" style="background-color:gray;border-radius:15px 50px;">Items</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="Admin" asp-controller="Coupon" asp-action="Index" style="background-color:gray;border-radius:15px 50px;">Coupons</a>
						</li>
					</ul>
					<ul class="navbar nav ml-auto">
						<li class="nav-item">
							<a class="nav-link text-dark btn btn-secondary" asp-area="Identity" asp-controller="Account" asp-action="Register" >Register</a>
						</li>
						&nbsp;&nbsp;
						<li class="nav-item">
							<a class="nav-link text-dark btn btn-secondary" asp-area="Identity" asp-controller="Account" asp-action="Login">Login&nbsp;&nbsp;</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2025 - FastFood.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
